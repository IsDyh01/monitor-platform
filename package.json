{
  "name": "monitor-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "dev:sdk": "pnpm --filter @monitor-platform/sdk dev",
    "dev:platform": "pnpm --filter @monitor-platform/platform dev",
    "dev:server": "pnpm --filter @monitor-platform/server dev",
    "build:sdk": "pnpm --filter @monitor-platform/sdk build",
    "clean:modules": "rm -rf node_modules && find ./packages -type d -name 'node_modules' -exec rm -rf {} +"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}